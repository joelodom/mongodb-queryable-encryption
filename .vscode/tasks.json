{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gradle: run",
            "type": "shell",
            "command": "./gradlew --console plain run",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gradle"
            ]
        }
    ]
}
